<!DOCTYPE html>
<html>
  <head>
    <title>Robyn | Encontre seu pet</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name=”viewport” content=”width=device-width, initial-scale=1.0">

    <% if @pet.present? %>
      <meta property="og:description"   content="Ajude a encontrar este pet" />
      <meta property="og:title"         content="<%=@pet.species.upcase%> PERDIDO" />
      <meta property="og:image"         content= 'https://robyn.com.br/pets/<%="#{@pet.id}"%>/imgkit' />
      <meta property="og:url"           content='https://robyn.com.br/pets/<%="#{@pet.id}"%>/imgkit' />
      <meta property="og:image:type"    content='https://robyn.com.br/pets/<%="#{@pet.id}"%>/imgkit' />
    <% end %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>

    <link href="https://fonts.googleapis.com/css2?family=Archivo+Black&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300;0,400;0,600;0,700;0,800;1,300;1,400;1,600;1,700;1,800&display=swap" rel="stylesheet">
  </head>

  <body>
    <% unless action_name == 'upload_imgkit'%>

        <%= render 'shared/navbar' %>
        <%= render 'shared/flashes' %>
    <% end %>
    <%= yield %>
    <% unless controller_name == "sessions" || controller_name == "registrations" || controller_name == "passwords" || controller_name == "spotteds" %>
      <%= render 'shared/footer' %>
    <% end %>
  </body>
</html>
