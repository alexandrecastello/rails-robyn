<div class="container m-5">
  <div class="row">
    <div class="col s3 offset-md-1">
      <div class="imagebox" style="margin-left: -100px; margin-bottom: 50px;width: 200px">
        <% if @pet.photo.attached? %>
          <%= cl_image_tag @pet.photo.key, class:"card-img-top" %>
          <%# raise %>
        <% else %>
          <%= image_tag "placeholder.png", class:"card-img-top" %>
        <% end %>
      </div>
    </div>
    <div class="col s9" style="margin-top: 50px; margin-right: 250px; width:200px">
      <div class="container" style="font-family: 'Roboto', sans-serif; margin-top: -50px;">
        <h1><%= @pet.name %></h1>
        <div>
          <p><strong>Descrição: </strong><%= @pet.species %> - <%= @pet.description %></p>
          <p><strong>Humano: </strong><%= @pet.user == current_user ? 'Você' : "#{@pet.user.first_name} #{@pet.user.last_name}" %></p>
          <p><strong>Perdido desde: </strong><br><%= @pet.lost_date.strftime("%d/%b/%y às %H:%M") %></p>
          <%= link_to 'Eu vi esse pet!', new_pet_spotted_path(@pet) %>
        </div>
      </div>
    </div>
  <%= render 'mapbox', markers: @markers %>
  <% if @pet.user == current_user %>
    <div class="col s3" style="margin-left: -10px; margin-bottom: 20px;">
      <%= link_to 'Meu pet voltou para casa!',  edit_pet_path(@pet) %></li>
    </div>
  <% end %>
  <div class="col s3" style="margin-left: -10px; margin-bottom: 20px;">
    <%= link_to 'Voltar para pets perdidos',  pets_path %></li>
  </div>
</div>