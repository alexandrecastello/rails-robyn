<body class="pattern">
<div class="container mt-5">
  <div class="row justify-content-center align-items-center" style="margin-top: 100px;">
    <div class="col-md-6">
        <h3 class="text-center open-sans">Quando <strong><%= @pet.name %></strong> retornou?</h3>
        <div class="row justify-content-center align-items-center">
          <div class="divisor"></div>
        </div>
        <%= simple_form_for(@pet) do |f| %>
          <%= f.input :found_date, input_html: { class: 'datepicker'}, label: 'Se seu pet retornou, insira a data de retorno' %>
          <div class="row justify-content-center mt-4 mb-5">
            <%= f.submit "Meu pet voltou!", class:"btn-custom pink mt-3"%>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
</body>
