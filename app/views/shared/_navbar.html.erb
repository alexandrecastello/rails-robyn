<div class="navbar navbar-expand-sm navbar-light navbar-lewagon fixed-top">

  <%= link_to "#", class: "navbar-brand" do %>
    <%= image_tag "robyn-vector.png", class: "bird" %>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="row nav-item active">
          <%= link_to "Como funciona", "#", class: "animated nav-link mr-4" %>
          <strong><%= link_to "Ver pets", pets_path, class: "animated nav-link mr-5"%></strong>
        </li>
        <li class="nav-item dropdown">
          <% if current_user.photo.attached? %>
            <%= cl_image_tag @photo.photo.key, height: 400, width: 400,:fetch_format=>:auto, crop: :fill %>
          <% else %>
            <%= image_tag "down.png", class: "down", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% end %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Minha conta", profile_path, class: "dropdown-item" %>
            <%= link_to "Editar dados", edit_user_registration_path, class: "dropdown-item" %>
            <%= link_to "Mensagens", "#", class: "dropdown-item" %>
            <%= link_to "Sair", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="row nav-item nav-text">
          <%= link_to "Como funciona", "http://localhost:3000/#como-funciona", class: "animated nav-link mr-3 nav-item active" %>
          <strong><%= link_to "Ver pets", pets_path, class: "animated nav-link mr-3 nav-item active"%></strong>
          <%= link_to "Cadastre-se", new_user_registration_path, class: "animated nav-link mr-3 nav-item active" %>
          <%= link_to "Entrar", new_user_session_path, class: "animated nav-link mr-3 nav-item active" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
