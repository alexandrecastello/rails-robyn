<div class="container d-flex justify-content-center">
  <div class="row d-flex justify-content-space-around">
    <%= simple_form_for(@pet) do |f| %>
      <%= f.input :address %>
      <%= f.input :seen_or_rescued, collection: ['Apenas vi', 'Vi e resgatei']  %>
      <%= f.input :description %>
      <%= f.input :lost_date %>
      <div class="row justify-content-center mt-4 mb-5">
        <%= f.submit 'Adicionar pet', class:"btn btn-primary btn-md" %>
      </div>
    <% end %>
  </div>
</div>