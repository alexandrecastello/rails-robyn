<!-- Topo do site -->

<div class="background-top">

  <div class="container">

    <div class="container headline">
      <h1 class="texto">Perdeu seu pet? A gente te ajuda</h1>

      <div class="botoes">
        <%= link_to "Ver pets", pets_path, class: "btn-custom white mr-3"%>
        <%= link_to "Perdi meu pet", new_pet_path, class: "btn-custom pink link-white"%>

      </div>

    </div>

  </div>

</div>

<!-- Seção "Ver pets" -->

<div class="container">
  <div class="d-flex justify-content-center section">
    <h1 class="texto">Ajude um pet a voltar para casa</h1>
  </div>
  <div class="row justify-content-around mt-5 cards-home">
    <% @pets.each do |pet| %>

    <% unless pet.found_date.nil? == false %>
      <div class="col-6 col-md-3 mb-5">
        <div class="card">
          <%= link_to pet_path(pet) do %>
            <% if pet.photo.attached? %>
              <%= cl_image_tag pet.photo.key, class: "card-img-top card-pets", width: "95", height: "150" %>
            <% else %>
              <%= image_tag "pholder.png", class:"card-img-top card-pets" %>
            <% end %>
            <div class="card-body">
              <h5 class="card-title text-center open-sans"><strong><%= pet.name %></strong></h5>
              <br>
              <p class="card-text text-center open-sans">Data: <%= pet.lost_date.strftime("%d/%b/%y")%></p>
              <p class="card-text text-center open-sans">São Paulo, SP<%#=pet.lost_location %></p>
              <p class="card-text text-center"></p>
              <%= link_to new_pet_spotted_path(pet) do %>
              <p class="card-text text-center mt-4"><button type="button" class="btn-custom purple">Reportar</button></p>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
      <% end %>
    <% end %>

  </div>
</div>
    <%= link_to "/pets", class: "d-flex justify-content-center section mt-3" do %>
      <h2>Ver todos</h2>
    <% end %>

