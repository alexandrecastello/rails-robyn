<div class="container">
  <div class="pl-0 pt-5 mt-3 pb-4 d-flex justify-content-center" style="font-family: 'Roboto', sans-serif; font-weight: 900; font-size: 25px; line-height: 41px; color: #313131;">
    <p>Adicionar pet perdido:</p>
  </div>
  <div class="container d-flex justify-content-center">
    <div class="row d-flex justify-content-space-around">
      <%= simple_form_for(@pet) do |f| %>
        <%= f.input :name %>
        <%= f.input :species, collection: ['Cachorro', 'Gato', 'Ave', 'Outra' ]  %>
        <%= f.input :description %>
        <%= f.input :lost_date %>
        <%= f.input :lost_location, label: 'Endereço do último local em que foi visto:' %>
        <div class="row justify-content-center mt-4 mb-5">
          <%= f.submit 'Adicionar pet', class:"btn btn-primary btn-md" %>
        </div>
      <% end %>
    </div>
    <br>
  </div>
</div>
