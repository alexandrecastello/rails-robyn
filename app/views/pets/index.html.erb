<body class="pattern">

  <div class="container" style="margin-top: 50px;">

    <div class="pl-0 pt-5" style="font-family: 'Open Sans', sans-serif; font-weight: 700; font-size: 25px; line-height: 41px; color: #313131; margin-top: -20px;">
      <p><%= @pets.size > 0 ? @pets.count : "0" %> pets perdidos atualmente</p>
      <div class="divisor" style="margin-top: -15px;"></div>
    </div>
    <div class="row d-flex justify-content-center mb-5">
      <% @pets.each do |pet| %>
        <% unless pet.found_date.nil? == false %>
          <div class="card text-center col-3 m-3 pr-0 pl-0 border-white shadow-sm">
            <%= link_to pet_path(pet) do %>
              <% if pet.photo.attached? %>
                <%= cl_image_tag pet.photo.key, class:"card-img-top card-show", width: "95", height: "150" %>
              <% else %>
                <%= image_tag "pholder.png", class:"card-img-top card-show", width: "95", height: "150" %>
              <% end %>
              <div class="card-body">
                <h5 class="card-title text-center open-sans"><strong><%= pet.name %></strong></h5>
                <br>
                <p class="card-text text-center open-sans">Data: <%= pet.lost_date.strftime("%d/%b/%y")%></p>
                <p class="card-text text-center open-sans">São Paulo<%#=pet.lost_location %></p>
                <div class="d-flex flex-row justify-content-center mt-4">
                  <%= link_to new_pet_spotted_path(pet), :title => "Vi este pet!" do %>
                    <p class="card-text text-center mt-4 link-icon mr-3"><i class="fas fa-binoculars"></i></p>
                  <% end %>
                  <%= link_to pet_pdf_path(pet, format: 'pdf'), :title => "Imprimir pôster" do %>
                    <p class="card-text text-center mt-4 link-icon mr-3"><i class="fas fa-file-image"></i></p>
                  <% end %>
                  <%= link_to pet_imgkit_path(pet), :title => "Compartilhar" do %>
                    <p class="card-text text-center mt-4 link-icon">
                      <i class="fb-share-button" data-href='https://robyn.com.br/pets/<%="#{pet.id}"%>/imgkit' data-layout="button_count"></i>
                      <!--<i class="fas fa-share-alt" data-href='request.base_url/pets/<%="#{pet.id}"%>/imgkit'></i></p> -->
                    </p>
                  <% end %>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

 <!-- Load Facebook SDK for JavaScript -->
  <div id="fb-root"></div>
  <script>(function(d, s, id) {
    var js, fjs = d.getElementsByTagName(s)[0];
    if (d.getElementById(id)) return;
    js = d.createElement(s); js.id = id;
    js.src = "https://connect.facebook.net/en_US/sdk.js#xfbml=1&version=v3.0";
    fjs.parentNode.insertBefore(js, fjs);
  }(document, 'script', 'facebook-jssdk'));</script>

</body>
