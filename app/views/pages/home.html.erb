  </div>

  <div class="row d-flex justify-content-center mt-5">

  <div class="card-group ml-5 cards-home">

    <% @pets.each do |pet| %>
      <div class="card mr-5">
        <% if pet.photo.attached? %>

          <%= cl_image_tag pet.photo.key, class: "card-img-top card-pets" %>
        <% else %>
          <%= image_tag "pholder.png", class:"card-img-top card-pets" %>
        <% end %>
        <div class="card-body">
          <h5 class="card-title text-center"><%= pet.name %></h5>
          <br>
          <p class="card-text text-center">Data</p>
          <p class="card-text text-center"><%= pet.lost_date.strftime("%d/%b/%y")%><p>
          <p class="card-text text-center">Local</p>
          <p class="card-text text-center">##<%#=pet.lost_location %></p>
          <%= link_to new_pet_spotted_path(pet), class: "navbar-brand" do %>
          <p class="card-text text-center"><button type="button" class="btn-custom purple">Reportar</button></p>
