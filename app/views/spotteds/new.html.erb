<div class="container mt-5">
  <div class="row justify-content-center align-items-center" style="margin-top: 150px;">
    <div class="col-md-6">
        <h3 class="text-center open-sans">Onde você viu <strong><%= "#{@pet.name}" %></strong>?</h3>
        <div class="row justify-content-center align-items-center">
          <div class="divisor"></div>
        </div>

          <%= simple_form_for [@pet, @spotted] do |f| %>
      <%= f.input :address, label: 'Insira o endereço completo:', input_html: { id: :address }%>
      <%= f.input :time, as: :datetime,  label: "Quando você viu #{@pet.name}?" %>
      <%= f.input :seen_or_rescued, label: 'Você resgatou o pet?', collection: ['Não, apenas vi.', 'Sim, está comigo!']  %>
      <%= f.input :comments, label: "Por favor, acrescente mais detalhes:"  %>
      <%= f.input :photo, :label => 'Envie uma foto deste pet', as: :file %>
      <div class="row justify-content-center mt-4 mb-5">
        <%= f.submit "Enviar", class:"btn-custom pink"%>
      </div>
    <% end %>

      </div>
  </div>
</div>












